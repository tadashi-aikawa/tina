def success(message = 'Good!') { notify('SUCCESS', message) }
def failure(message = 'Something wrong..') { notify('FAILURE', message) }
def error(message = 'Bad!') { notify('ERROR', message) }
def pending(message = 'In progerss..') { notify('PENDING', message) }

private def notify(state, message) {
    step([
            $class: 'GitHubCommitStatusSetter',
            statusResultSource: [
                    $class: 'ConditionalStatusResultSource',
                    results: [
                            [$class: 'AnyBuildResult', message: message, state: state]
                    ]
            ]
    ])
}

return this